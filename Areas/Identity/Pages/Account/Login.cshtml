@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}


<div class="row" style="margin-top: 10%">

    <div class="col-md-4"></div>
    <div class="col-md-4">

        <div class="card">
            <div class="card-body">
                <div style="text-align: center;">
                    <img src="~/images/bup_logo.png" />
                    <h4 style="text-align: center;" class="text-muted">Use a BUP account for log in</h4>
                </div>
                <section>
                    <form method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-sm btn-success btn-block btn-signin" style="padding-top: 3%;">Log in</button>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
