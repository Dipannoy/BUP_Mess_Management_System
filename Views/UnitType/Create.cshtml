@model Mess_Management_System_Alpha_V2.Models.MessModels.UnitType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

<h4>Unit Type</h4>
<hr />



<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name" name="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ShortName" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ShortName" type="text" class="form-control" placeholder="Enter Short Name" name="ShortName">
                    <span asp-validation-for="ShortName" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <br />

                <div class="col-sm-offset-2 col-sm-10">
                    <a asp-action="Index" class="btn btn-default">Back to List</a> |
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            </div>


        </form>
    </div>
</div>













@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
