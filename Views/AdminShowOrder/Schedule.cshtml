            </div>
            <div class="card-body">
                <ul class="list-group" id="BreakfastItemListAdded">
                    <li class="list-group-item" style="padding:0px">
                        <div class="row">
                            <div class="col-sm-3">


                                Name

                            </div>
                            <div class="col-sm-3">

                                Meal

                            </div>
                            <div class="col-sm-6">

                                Items

                            </div>
                        </div>
                        <hr />

                        @if (mealId == 10005)
                        {
                            var allOrderItem = _db.OrderHistory.Where(x => x.OrderDate.ToShortDateString() == OrderDate && x.MealTypeId == mealId && x.SetMenuId == null).ToList();
                            var ordAllPersonExtraChit = _db.OrderHistory.Where(x => x.OrderDate.ToShortDateString() == OrderDate && x.MealTypeId == mealId && x.SetMenuId == null).Select(x => x.ApplicationUser.Id).Distinct().ToList();

                            foreach (var i in ordAllPersonExtraChit)
                            {
                                <div class="row">
                                    <div class="col-sm-3">
                                        @{
                                            var prson = _context.Users.Where(x => x.Id == i).FirstOrDefault();
                                        }
                                        @prson.BUPFullName
                                    </div>
                                    <div class="col-sm-3">
                                        ExtraChit
                                    </div>
                                    @{var prsnorder = allOrderItem.Where(x => x.UserId == i).ToList();
                                        double qnt2 = 0;
                                        string itemdetail2 = "";
                                        foreach (var p in prsnorder)
                                        {
                                            var itemnm = _context.StoreOutItem.Where(x => x.Id == p.StoreOutItemId).FirstOrDefault();
                                            itemdetail2 += itemnm.Name + "-" + p.UnitOrdered + ", ";
                                        }
                                    }
                                    <div class="col-sm-6">
                                        @itemdetail2
                                    </div>
                                </div>
                                <hr />

                            }
                        }
                        else
                        {


                            var PreOrderSetMenuDetailList = _db.PreOrderSchedule.Include(x => x.SetMenu).Where(x => x.LastModifiedDate.ToShortDateString() == ODate.AddDays(-1).ToShortDateString() && x.MealTypeId == mealId).ToList();




                            @foreach (var pb in PreOrderSetMenuDetailList)
                            {
                                <div class="row">
                                    <div class="col-sm-3">
                                        @pb.ApplicationUser.BUPFullName
                                    </div>
                                    <div class="col-sm-3">
                                        @pb.MealType.Name
                                    </div>
                                    @{ double qnt = 0;
                                        double pre = 0;
                                        string itemdetail = "";
                                        var stMenuDetail = _db.SetMenuDetails.Where(x => x.SetMenuId == pb.SetMenuId).ToList();
                                        var ordHistoryESM = _db.OrderHistory.Where(x => x.SetMenuId == pb.SetMenuId && x.StoreOutItemId == null && x.ApplicationUser.Id == pb.ApplicationUser.Id).FirstOrDefault();
                                        var ordHistoryECI = _db.OrderHistory.Where(x => x.SetMenuId == pb.SetMenuId && x.StoreOutItemId != null && x.ApplicationUser.Id == pb.ApplicationUser.Id).ToList();
                                        var ordHistoryEXtraChit = _db.OrderHistory.Where(x => x.SetMenuId == null && x.OrderDate.ToShortDateString() == OrderDate && x.MealTypeId == mealId && x.StoreOutItemId != null && x.ApplicationUser.Id == pb.ApplicationUser.Id).ToList();

                                        if (pb.IsPreOrderSet == true)
                                        {
                                            pre = 1;
                                        }
                                        foreach (var smd in stMenuDetail)
                                        {
                                            qnt = 0;
                                            qnt += pre;

                                            var itemnm = _db.StoreOutItem.Where(x => x.Id == smd.StoreOutItemId).FirstOrDefault();
                                            if (ordHistoryESM != null)
                                            {
                                                qnt = qnt + ordHistoryESM.UnitOrdered;

                                                itemdetail += itemnm.Name + "-" + qnt + ", ";
                                            }
                                            else
                                            {
                                                itemdetail += itemnm.Name + "-" + qnt + ", ";

                                            }
                                        }
                                        foreach (var oec in ordHistoryECI)
                                        {
                                            var itemnm = _db.StoreOutItem.Where(x => x.Id == oec.StoreOutItemId).FirstOrDefault();

                                            itemdetail += itemnm.Name + "-" + oec.UnitOrdered + ", ";

                                        }
                                        foreach (var ohe in ordHistoryEXtraChit)
                                        {
                                            var itemnm = _db.StoreOutItem.Where(x => x.Id == ohe.StoreOutItemId).FirstOrDefault();

                                            itemdetail += itemnm.Name + "-" + ohe.UnitOrdered + ", ";

                                        }
                                    }
                                    <div class="col-sm-6">
                                        @itemdetail
                                    </div>


                                </div>
                                <hr />
                            }

                            var ordHistoryEXtraChitnonPre = _db.OrderHistory.Where(x => x.SetMenuId == null && x.OrderDate.ToShortDateString() == OrderDate && x.MealTypeId == mealId && x.StoreOutItemId != null).ToList();
                            if (ordHistoryEXtraChitnonPre.Count > 0)
                            {
                                foreach (var oenp in ordHistoryEXtraChitnonPre)
                                {
                                    var preschedule = PreOrderSetMenuDetailList.Where(x => x.ApplicationUser.Id == oenp.UserId).FirstOrDefault();
                                    if (preschedule == null)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3">
                                                @{
                                                    var name = _userManager.Users.Where(x => x.Id == oenp.UserId).FirstOrDefault();
                                                }
                                                @name.BUPFullName
                                            </div>
                                            <div class="col-sm-3">
                                                @oenp.MealType.Name
                                            </div>
                                            <div class="col-sm-6">
                                                @oenp.StoreOutItem.Name - @oenp.UnitOrdered
                                            </div>

                                        </div>
                                        <hr />
                                    }
                                }
                            }



                        }





                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


