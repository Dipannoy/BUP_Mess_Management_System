@model Mess_Management_System_Alpha_V2.Models.MessModels.WarehouseStorage
@inject IDDLHelper _ddlHelper

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

<h4>Warehouse Storage</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Date" class="control-label col-sm-2"></label>
                <div class="col-sm-5">
                    <input type="date" id="currentDate" asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="StoreInItemId" class="control-label col-sm-2"></label>
                <div class="col-sm-5">
                    <select asp-for="StoreInItemId" class="form-control border-radius-none" asp-items="@{new SelectList(_ddlHelper.GetStoreInItem().Prepend(new KeyValuePair<string, string>("0","-- Select Items --")),"Key","Value","")}"></select>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Amount" class="control-label col-sm-2"></label>
                <div class="col-sm-5">
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsStoreOut" /> @Html.DisplayNameFor(model => model.IsStoreOut)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <br />
                <div class="col-sm-offset-1 col-sm-10">

                    <input type="submit" value="Create" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-default">Back to List</a>
                </div>
            </div>


        </form>
    </div>
</div>



<script>
    var date = new Date();

    var day = date.getDate();
    var month = date.getMonth() + 1;
    var year = date.getFullYear();

    if (month < 10) month = "0" + month;
    if (day < 10) day = "0" + day;

    var today = year + "-" + month + "-" + day;


    document.getElementById('currentDate').value = today;
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
