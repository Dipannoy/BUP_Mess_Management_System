@model ICollection<OrderHistory>
@inject ApplicationDbContext _db
@inject IDDLHelper _ddlhelper
@{
    ViewData["Title"] = "EditBill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var from = this.Context.Request.Query["from"];
    var to = this.Context.Request.Query["to"];
    var UserId = this.Context.Request.Query["UserId"];

}



    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-3">
                <h2>Admin Order</h2>
            </div>
         

        </div>
        <hr />


        <div class="row">
            <form asp-action="EditBill" method="get" class="row">
                <div class="col-3">
                    <small>from</small>
                    <input type="date" name="from" id="from" value="@from" class="form-control" />
                </div>
                <div class="col-3">
                    <small>to</small>
                    <input type="date" name="to" id="to" value="@to" class="form-control" />
                </div>
                <div class="col-3">
                    <small>user</small>
                    <select name="UserId" id="UserId" class="form-control" asp-items="@(new SelectList(_ddlhelper.GetAllUsersList().Prepend(new KeyValuePair<string, string>("","-- Select User --")),"Key","Value",UserId))"></select>

                </div>
                <div class="col-3">
                    <br />
                    <button type="submit" class="btn btn-success btn-sm">Load</button>
                </div>
            </form>

        </div>

        <hr />
        <div class="row table-responsive">


            @if (Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="grey lighten-2">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Issue Date</th>
                            <th scope="col">Order Date</th>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Extra Item Details</th>
                            <th scope="col">Tk.</th>
                            <th scope="col"> Bill Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1; }
                        @foreach (var oh in Model.OrderByDescending(x => x.OrderDate).ToList())
                        {
                            <tr>
                                <th scope="row">@(i++)</th>
                                <th>@oh.CreatedDate.ToShortDateString() <small>@oh.CreatedDate.ToShortTimeString()</small></th>
                                <th>@oh.OrderDate.ToShortDateString() </th>
                                <td>@oh.ApplicationUser.BUPFullName</td>
                                <td>@oh.MealType.Name</td>
                                <td>
                                    @if (oh.StoreOutItemId != null)
                                    {
                                        @oh.StoreOutItem.Name
                                    }
                                </td>
                                <td>@oh.OrderAmount</td>
                                <td>
                                    @if (oh.IsForwardedToOffice == true)
                                    {
                                        <input type="checkbox" class="custom-control-input" style="position: inherit;" id="check_@oh.Id" name="checkForward" value="@oh.Id" checked />
                                        <label class="custom-control-label" for="check_@oh.Id">IsForwardedToOffice</label>
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="custom-control-input" style="position: inherit;" id="check_@oh.Id" name="checkForward" value="@oh.Id" />
                                        <label class="custom-control-label" for="check_@oh.Id">IsForwardedToOffice</label>
                                    }
                                </td>
                            </tr>
                        }
                        <tr>
                            <th scope="row"></th>
                            <th></th>
                            <th></th>
                            <td></td>
                            <td></td>
                            <td>
                                <strong>Total : </strong>
                            </td>
                            <td><strong>@Model.Sum(a => a.OrderAmount).ToString("#.##")</strong></td>
                        </tr>

                    </tbody>
                </table>
            }
            <button class="btn btn-sm btn-primary" onclick="EditBill()">Edit</button>

        </div>

        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        @section Scripts {

            <script>
                function EditBill() {

                    var addedItem = [];
                    var notAddedItem = [];

            var checkBoxAdded = document.getElementsByName("checkForward");
            var checkBoxLengthAdded = checkBoxAdded.length;
            var tempOrderValueAdded = "";
            for (var i = 0; i < checkBoxLengthAdded; i++) {
                if (checkBoxAdded[i].checked == true) {
                    tempOrderValueAdded = checkBoxAdded[i].value.toString();
                    var obj = { OrderId: tempOrderValueAdded };
                    addedItem.push(obj);
                }
                else {
                     tempOrderValueAdded = checkBoxAdded[i].value.toString();
                    var obj = { OrderId: tempOrderValueAdded };
                    notAddedItem.push(obj);

                }
                    }
            //=============== Extra Item Id =================


                    tempOrderList = JSON.stringify(addedItem);
                    tempOrderNotSelectList = JSON.stringify(notAddedItem);




             $.ajax({

                url: '@Url.Action("EditOrderHistoryList", "AdminOrder")',
                 type: "POST",
                 data: { OrderList: tempOrderList, NotForwardedOrderList: tempOrderNotSelectList },
                success: function (response) {
                    if (response.success) {

                        //alert(response.responseText);
                        //window.location.reload(true);



                           window.alert(response.responseText);
                        //jQuery("#messageUp").append('<div class="alert alert-success" role="alert"><b>"' + response.responseText + '"</b></div>');
                window.location.reload(true);

             


                    } else {
                        // DoSomethingElse()
                        //alert(response.responseText);
                        window.alert(response.responseText);
                                        window.location.reload(true);


              
                    }
                }


            })






                }



            </script>
        }




    </div>