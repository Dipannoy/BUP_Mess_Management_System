@model IEnumerable<Mess_Management_System_Alpha_V2.Models.MessModels.MealType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Meal Types</h2>



<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                #SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailableForPreOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreOrderLastTime)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @if (Model != null)
        {
            @foreach (var item in Model.ToList())
            {
                <tr>
                    <td>
                        @(i++)
                    </td>
                    <td>
                        @item.Serial
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.IsAvailableForPreOrder
                    </td>
                    <td>
                        @item.PreOrderLastTime.ToShortTimeString()
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>