@using Microsoft.AspNetCore.Identity
@using Mess_Management_System_Alpha_V2.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    string existingRole = "";
    if (user != null)
    {
        existingRole = UserManager.GetRolesAsync(user).Result.Single();
    }

}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
                @if (existingRole == "Admin")
                    {
                        <a asp-area="" asp-action="Index" asp-controller="Admin" title="Manage">Hello @UserManager.GetUserName(User)</a>
                    }
                    else
                    {
                        <a asp-area="" asp-action="Index" asp-controller="Consumer" title="Manage">Hello @UserManager.GetUserName(User)</a>
                    }
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>*@
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}