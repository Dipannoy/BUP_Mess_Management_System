<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <environment include="Development">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
        <!-- Bootstrap core CSS -->
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="~/lib/mdbootstrap/css/mdb.css" rel="stylesheet">
        <!-- custom styles -->
        <link href="~/css/site.css" rel="stylesheet">
    </environment>
    <environment exclude="Development">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
        <!-- Bootstrap core CSS -->
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="~/lib/mdbootstrap/css/mdb.min.css" rel="stylesheet">
        <!-- custom styles -->
        <link href="~/css/site.min.css" rel="stylesheet">
    </environment>


</head>
<body>
    <div>
        @RenderBody()
    </div>



    <environment include="Development">

        <!-- JQuery -->
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="~/lib/popper.js/umd/popper.js"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">

        <!-- JQuery -->
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="~/lib/popper.js/umd/popper.min.js"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="~/js/site.min.js"></script>
    </environment>

</body>
</html>
