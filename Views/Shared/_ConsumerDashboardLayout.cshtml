    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>




    <!-- Moment Plugin Js -->
    <script src="~/ConsumerDashboard/plugins/momentjs/moment.js"></script>

    <!-- Bootstrap Material Datetime Picker Plugin Js -->
    <script src="~/ConsumerDashboard/plugins/bootstrap-material-datetimepicker/bootstrap-material-datetimepicker.js"></script>


    <!-- Custom Js -->
    <script src="~/ConsumerDashboard/js/admin.js"></script>
    <script src="~/ConsumerDashboard/js/pages/forms/basic-form-elements.js"></script>

    <!-- Demo Js -->
    <script src="~/ConsumerDashboard/js/demo.js"></script>

    @*</environment>*@


</body>
</html>
