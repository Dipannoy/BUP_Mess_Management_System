@{
    ViewData["Title"] = "BillPayment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var ConsumerBillList = _db.ConsumerMonthlyBillRecord.Where(x => x.TotalAmount > 0).ToList();
    var groupConsumerBillList = ConsumerBillList.GroupBy(a => a.UserId)
                      .Select(a => new { Amount = a.Sum(b => b.TotalAmount), UserID = a.Key })
                      .ToList();
    var paymentDictionay = new Dictionary<string, string>();

    var paymentMethodList = _db.PaymentMethod.Where(x => x.Id > 0).ToList();
    foreach (var i in paymentMethodList)
    {
        paymentDictionay.Add(i.Id.ToString(), i.MethodName);
    }
}

