@model Mess_Management_System_Alpha_V2.Models.MessModels.StoreInItem
@inject IDDLHelper _ddlHelper

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

<h4>StoreIn Items</h4>
<hr />






<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="Name" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsOpen" /> @Html.DisplayNameFor(model => model.IsOpen)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="UnitTypeId" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <select asp-for="UnitTypeId" class="form-control border-radius-none" asp-items="@{new SelectList(_ddlHelper.GetUnitTypes().Prepend(new KeyValuePair<string, string>("0","-- Select Unit Type --")),"Key","Value","")}"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="StoreInCategoryId" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <select asp-for="StoreInCategoryId" class="form-control border-radius-none" asp-items="@{new SelectList(_ddlHelper.GetStoreInItemCategory().Prepend(new KeyValuePair<string, string>("0","-- Select Item Category --")),"Key","Value","")}"></select>
                </div>
            </div>


            <div class="form-group">
                <br />
                <div class="col-sm-offset-1 col-sm-10">
                    <input type="submit" value="Create" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-default">Back to List</a>
                </div>
            </div>


        </form>
    </div>
</div>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
